<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="20dp"
        tools:src="@drawable/dollar_cash" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="13dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text.SemiBold.17"
            android:textColor="?attr/colorOnBackground"
            tools:text="Bitcoin" />

        <TextView
            android:id="@+id/coin_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:textAppearance="@style/Text.Regular.15"
            tools:text="BTCB"
            tools:textColor="@color/sibn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="13dp"
        android:layout_marginEnd="20dp"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coin_top_numeric_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="@style/Text.SemiBold.17"
            tools:text="+ 1,452.6$"
            tools:textColor="@color/increase" />

        <TextView
            android:id="@+id/coin_bottom_numeric_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:textAppearance="@style/Text.Regular.15"
            android:textColor="?attr/colorOnBackground"
            tools:text="58,755$" />
    </LinearLayout>
</LinearLayout>